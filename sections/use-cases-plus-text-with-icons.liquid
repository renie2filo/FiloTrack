<div
  class="contact-text-with-icon module-wrapper style-{{ section.settings.style }} border"
  data-section-id="{{ section.id }}"
  data-section-type="text-columns"
  style="border-top: 1px solid #eee;">
  <div class="module home-inline fc-pb-0 fc-pt-32">

    {% if section.settings.title != blank %}
      <div class="module-header home-inline-header">
          <div class="module-title fc-ta-l">
            <h2>{{ section.settings.title | escape }}</h2>
          </div>
        {% if section.settings.subtitle != blank %}
          <div class="module-subtitle">
            {{ section.settings.subtitle | escape }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    <div class="module-body home-inline-body">
      <div
        class="list column-{{ section.settings.columns_per_row }} clearfix">

        {% for block in section.blocks %}

          <div class="list-item {{ block.settings.class }} {% if block.settings.icon != blank  %}has-icon{% endif %}" {{ block.shopify_attributes }}>
            {% if block.settings.icon != blank %}
              <div>
                {%
                  include block.settings.icon_type,
                  icon: block.settings.icon,
                  class: block.settings.icon_class,
                  title: block.settings.title
                %}
              </div>
            {% endif %}

            <div>
              {% if block.settings.title != blank %}
                <div class="list-title">
                  {{ block.settings.title | escape }}
                </div>
              {% endif %}

              {% if block.settings.text != blank %}
                <div class="list-text{% if block.settings.title == blank %} no-margin{% endif %}">
                  {{ block.settings.text }}
                </div>
              {% endif %}

              {% if block.settings.button_text != blank and block.settings.button_link != blank %}
                <div class="list-cta">
                  <a class="button list-button" href="{{ block.settings.button_link }}">
                    {{ block.settings.button_text | escape }}
                  </a>
                </div>
              {% endif %}
              
              {% if block.settings.button_text2 != blank and block.settings.button_link2 != blank %}
                <div class="list-cta">
                  <a class="button list-button" href="{{ block.settings.button_link2 }}">
                    {{ block.settings.button_text2 | escape }}
                  </a>
                </div>
              {% endif %}
              
              
            </div>
          </div>
        {% endfor %}
      </div>
    </div>

  </div>
</div>
<style>
  .contact-text-with-icon .button.list-button {
  	min-width: 72%;
  }
</style>

{% schema %}
{
  "name": "Plus Text with icons",
  "max_blocks": 6,
  "settings": [
    {
      "type": "select",
      "id": "style",
      "label": "Background style",
      "options": [
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "light",
          "label": "Light"
        }
      ],
      "default": "default"
    },
    {
      "type": "select",
      "id": "columns_per_row",
      "label": "Columns per row",
      "options": [
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "3",
          "label": "3"
        },
        {
          "value": "4",
          "label": "4"
        }
      ],
      "default": "3"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Text columns with icons"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subheading"
    }
  ],
  "blocks": [
    {
      "type": "text_column",
      "name": "Column",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Feature title"
        },
        {
          "type": "text",
          "id": "class",
          "label": "Class"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text or html",
          "default": "<p>Display up to six features with an option to toggle icons on or off, and add unique calls to action.</p>"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Link"
        },
        {
          "type": "text",
          "id": "button_text2",
          "label": "Button text"
        },
        {
          "type": "url",
          "id": "button_link2",
          "label": "Link"
        },
        {
          "type": "select",
          "id": "icon_type",
          "label": "Icon Type",
          "options": [
            {
              "value": "font-icon",
              "label": "ION ICON"
            },
            {
              "value": "fc-icon-font",
              "label": "Filo ICON"
            }
          ],
          "default": "fc-icon-font"
        },
        {
          "type": "text",
          "id": "icon",
          "label": "Icon name",
          "default": "ion-image",
          "info": "[Here](http:\/\/ionicons.com\/) the list of ion-icons."
        },
        {
          "type": "text",
          "id": "icon_class",
          "label": "Icon Class"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "Text columns with icons",
      "blocks": [
        {
          "type": "text_column"
        },
        {
          "type": "text_column"
        },
        {
          "type": "text_column"
        }
      ]
    }
  ]
}
{% endschema %}