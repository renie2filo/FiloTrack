{% if section.settings.custom_class %}
  {% assign custom_class = section.settings.custom_class %}
{% else %}
  {% assign custom_class = 'fc_def_class' %}
{% endif %}

<style>
  .fc-how-it-works .{{ custom_class }} .button.btn2 {
    display:none;
  }
  .{{ custom_class }} h1 {
    color: #000;
    font-weight: 300;
    font-size: 36px;
    line-height: 46px;
  }
  .{{ custom_class }} h2 {
    color: #000;
    font-size: 18px;
    line-height: 28px;
  }
  .{{ custom_class }} .home-inline .list-cta {
        margin-top: 16px;
  }
  .{{ custom_class }} .button {
    padding: 8px;
    width: 70%;
    margin: auto;
  }
</style>
{% comment %}{% endcomment %}

<div
  class="module-wrapper style-{{ section.settings.style }} {{ custom_class }} border"
  data-section-id="{{ section.id }}"
  data-section-type="text-columns"> <!-- style="background-color:#ebebeb;" -->
  <div class="module home-inline">

    {% if section.settings.title != blank %}
      <div class="module-header home-inline-header">
          <div class="module-title">
            <h3>{{ section.settings.title | escape }}</h3>
          </div>
        {% if section.settings.subtitle != blank %}
          <div class="module-subtitle">
            {{ section.settings.subtitle | escape }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    <div class="module-body home-inline-body">
      <div class="list column-{{ section.settings.columns_per_row }} clearfix">

        {% for block in section.blocks %}
          {% if block.settings.icon_image != blank %}

          <div class="list-item {% if block.settings.icon != blank  %}has-icon{% endif %}" {{ block.shopify_attributes }}>
            {% if block.settings.icon != blank %}
              <div class="list-image-wrapper">
                {%
                  include 'font-icon',
                  icon: block.settings.icon,
                  class: 'list-item-icon',
                  title: block.settings.title
                %}
              </div>
            {% endif %}
            
            {% if block.settings.icon_image != blank %}
              <div class="list-image-wrapper" style="max-width: none;">
                <span style="display: inline-block; height: 100%; vertical-align: middle;"></span><img src="{{ block.settings.icon_image | img_url: '600x' }}" style="max-width: 400px; width: 100%; vertical-align: middle;"/>
              </div>
            {% endif %}

            <div class="list-text-wrapper">
              {% if block.settings.title != blank %}
                <div class="list-title">
                  {{ block.settings.title | escape }}
                </div>
              {% endif %}

              {% if block.settings.text != blank %}
                <div class="list-text{% if block.settings.title == blank %} no-margin{% endif %}">
                  {{ block.settings.text }}
                </div>
              {% endif %}

              {% if block.settings.button_text != blank and block.settings.button_link != blank %}
                <div class="list-cta">
                  <a class="button list-button {{ block.settings.button_class }}" href="{{ block.settings.button_link }}">
                    {{ block.settings.button_text | escape }}
                  </a>
                </div>
              {% endif %}
              {% if block.settings.button_text2 != blank and block.settings.button_link2 != blank %}
                <div class="list-cta">
                  <a class="button list-button btn2 {{ block.settings.button_class2 }}" href="{{ block.settings.button_link2 }}">
                    {{ block.settings.button_text2 | escape }}
                  </a>
                </div>
              {% endif %}
            </div>
          </div>
        {% endif %}
        {% endfor %}
        
      </div>
    </div>

  </div>
</div>

