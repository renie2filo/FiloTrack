
<div
  class="module-wrapper style-{{ section.settings.style }} border"
  data-section-id="{{ section.id }}"
  data-section-type="text-columns">
  <div class="module home-inline">

    {% if section.settings.title != blank %}
      <div class="module-header home-inline-header">
          <div class="module-title">
            <h3>{{ section.settings.title }}</h3>
          </div>
        {% if section.settings.subtitle != blank %}
          <div class="module-subtitle">
            {{ section.settings.subtitle }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    <div class="module-body home-inline-body">
      <div
        class="list column-{{ section.settings.columns_per_row }} clearfix">

        {% for block in section.blocks %}

          <div class="list-item {% if block.settings.icon != blank  %}has-icon{% endif %}" {{ block.shopify_attributes }}>
            {% if block.settings.icon != blank %}
              <div class="list-image-wrapper">
                {%
                  include 'font-icon',
                  icon: block.settings.icon,
                  class: 'list-item-icon',
                  title: block.settings.title
                %}
              </div>
            {% endif %}
            
            {% if block.settings.icon_image != blank %}
              <div class="list-image-wrapper" style="height: 250px; max-width: 100%">
                <span style="display: inline-block; height: 100%; vertical-align: middle;"></span><img src="{{ block.settings.icon_image | img_url: '250x' }}" style="vertical-align: middle; "/>
              </div>
            {% endif %}

            <div class="list-text-wrapper">
              {% if block.settings.title != blank %}
                <div class="list-title" style="color: black; font-size: 18px;">
                  {{ block.settings.title }}
                </div>
              {% endif %}

              {% if block.settings.text != blank %}
                <div class="list-text{% if block.settings.title == blank %} no-margin{% endif %}">
                  {{ block.settings.text }}
                </div>
              {% endif %}

              {% if block.settings.button_text != blank and block.settings.button_link != blank %}
                <div class="list-cta">
                  <a class="button list-button" href="{{ block.settings.button_link }}">
                    {{ block.settings.button_text | escape }}
                  </a>
                </div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
        
        {% if section.settings.button_text != blank and section.settings.button_link != blank %}
        	<a class="button" href="{{ section.settings.button_link }}">{{ section.settings.button_text }}</a>
        {% endif %}
      </div>
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Text Column 1",
  "max_blocks": 8,
  "settings": [
    {
      "type": "select",
      "id": "style",
      "label": "Background style",
      "options": [
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "light",
          "label": "Light"
        }
      ],
      "default": "default"
    },
    {
      "type": "select",
      "id": "columns_per_row",
      "label": "Columns per row",
      "options": [
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "3",
          "label": "3"
        },
        {
          "value": "4",
          "label": "4"
        }
      ],
      "default": "3"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "FC Text columns with icons"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Url"
    },
    {
      "type": "text",
      "id": "custom_class",
      "label": "Custom Class"
    }
  ],
  "blocks": [
    {
      "type": "text_column",
      "name": "Column",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading Html",
          "default": "Feature title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "<p>Display up to six features with an option to toggle icons on or off, and add unique calls to action.</p>"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Link"
        },
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon image",
          "info": "alternative to icon - .png recommended"
        },
        {
          "type": "text",
          "id": "icon",
          "label": "Icon name",
          "default": "ion-image",
          "info": "[Click here](http:\/\/ionicons.com\/) to view the list of available icons. Example: bluetooth"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Text",
      "name": "FC Text columns with icons",
      "blocks": [
        {
          "type": "text_column"
        },
        {
          "type": "text_column"
        },
        {
          "type": "text_column"
        }
      ]
    }
  ]
}
{% endschema %}