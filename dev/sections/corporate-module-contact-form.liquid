{% comment %}
  Assign a full image url or asset uri to enable a dual column display
{% endcomment %}
{% assign contact_module_image = false %}

<div class="module-wrapper style-{{ section.settings.style }} {{ section.settings.custom_class }}"
     style="border-top: 1px solid rgb(227, 227, 227);">
  <div class="module side contact crop {% if contact-module-image == empty %}one-child{% endif %}">
    <div class="module-body">
      <div class="side-wrapper">
        {% if contact_module_image %}
          <div class="side-section left">
            <div class="side-media-wrapper">
              <div
                class="side-cover"
                style="background-image:url('{{ contact_module_image | img_url: '1440x640' }}')"></div>
              <img
                class="side-image"
                alt="{{ contact_module_image.alt | escape }}"
                src="{{ contact_module_image | img_url: '1440x640'}}">
            </div>
          </div>
        {% endif %}
        <div class="side-section right">
          <div class="side-text-wrapper">
			<h3 class="module-title">Request a quote</h3>
            <div class="formBuilder-wrapper">
            	[powr-form-builder id=e9dad1ac_1503331281]     
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Contact form",
  "settings": [
    {
      "type": "select",
      "id": "style",
      "label": "Background style",
      "options": [
        {
          "value": "default",
          "label": "Default"
        },
        {
          "value": "light",
          "label": "Light"
        },
        {
          "value": "color",
          "label": "Color"
        },
        {
          "value": "gradient",
          "label": "Gradient"
        }
      ],
      "default": "light"
    }
  ]
}
{% endschema %}