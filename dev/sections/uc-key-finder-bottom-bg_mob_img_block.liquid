        },
        {
        "value": "4",
        "label": "40%"
        },
        {
        "value": "5",
        "label": "50%"
        },
        {
        "value": "6",
        "label": "60%"
        },
        {
        "value": "7",
        "label": "70%"
        },
        {
        "value": "8",
        "label": "80%"
        },
        {
        "value": "9",
        "label": "90%"
