{% if section.settings.enable %}
  {% assign image_size = '' %}
  {% if section.settings.layout == 'full-width' %}
    {% assign image_size = '1440x600' %}
  {% elsif section.settings.layout == 'full-window' %}
    {% assign image_size = '2048x2048' %}
  {% endif %}
  {% assign image_mobile_size = '600x600' %}

  {% if section.settings.custom_class %}
    {% assign custom_class = section.settings.custom_class %}
  {% else %}
    {% assign custom_class = 'fc_def_class' %}
  {% endif %}

  <div class="fc-use-case-bottom fc-bg-img-block-wrapper {{ custom_class }}" data-section-id="{{ section.id }}">

    <div class="home-slideshow-loader"></div>

    <div class="">
        {% assign slide_image = section.settings.image | img_url: image_size %}
        {% assign mobile_image = section.settings.image_mobile | img_url: image_mobile_size %}

        {% assign has_content = true %}
        {% assign onboarding = false %}
        {% if
          section.settings.title == blank and
          section.settings.subtitle == blank and
          section.settings.cta == blank and
          section.settings.button == blank %}
          {% assign has_content = false %}
          {% assign onboarding = true %}
        {% endif %}

        {%- capture fc_slide_class -%}
          home-slide 
          active
          text-aligned-{{ section.settings.alignment }}
          overlay
          overlay-{{ section.settings.overlay_style }}
          overlay-opacity-{{ section.settings.overlay_opacity }}
        {%- endcapture %}
      
        <style>
          .{{ custom_class }} .fc-slide-image-container {
            background-image:url('{{ slide_image }}');
              background-size: cover;
              z-index: 1;
              }
          .{{ custom_class }} .fc-slide-image-container .fc-mob-image {
            display: none;
          }
          .{{ custom_class }} .fc-slide-text.slide-text {
            padding-left: 40%;
            text-align: left;
          }
          .{{ custom_class }} .fc.slide-text .button {
            margin: 48px 0;
          }
          .{{ custom_class }} .fc-product-feature-list {
            margin: 0 -8px;
            max-width: 480px;
          }
          .{{ custom_class }} .fc-product-feature-list .fc-product-feature {
            padding: 2px 8px;
            /*width: 50%;*/
            float: left;
          }
          .{{ custom_class }} .fc-product-feature-list .fc-product-feature div {
            vertical-align: top;
            display: inline-block;
          }
          .{{ custom_class }} .fc-product-feature-list .fc-product-feature div i {
            padding-right: 4px;
          }
          .{{ custom_class }} .fc-product-features-text {
            color: #fff;
          }
          .{{ custom_class }} .fc-product-features-line {
              max-width: 89%;
          }
          @media screen and (max-width: 768px) {
            .{{ custom_class }} .fc-slide-image-container {
              background-image: none;
              background-color: {{ section.settings.bg_color }};
              padding-top: 40px;
            }
            .{{ custom_class }} .fc-slide-image-container .fc-mob-image {
              display: block;
                width: 100%;
            }
            .{{ custom_class }} .fc-slide-text.slide-text {
              padding: 0;
            }
            .{{ custom_class }} .fc-slide-text-inner {
              padding: 16px 32px;           
            }
            .{{ custom_class }} .section-bg-img-wrapper.slides-ready {
              height: auto !important;
            }
            .{{ custom_class }} .home-slide {
              position: relative;
            }
            .{{ custom_class }} .slide-text {
              transform: translate(0, 0);
              position: relative;
              top: 50%;
              left: 0;
            }
            .{{ custom_class }} .fc.slide-text .button {
            	margin: 24px 0;
          	}
            .{{ custom_class }} .fc-product-feature-list .fc-product-feature {
              width: 100%;
            }
          }
    </style>
        <div
          class="fc-slide-image-container {{ fc_slide_class | strip_newlines }}" 
          {% if section.settings.slideshow-layout == 'full-window' %}
            style="background-image: url('{{ slide_image }}');"
          {% endif %} 
          data-slide-text="{{ section.settings.text_style }}"
          >

          {% if section.settings.cta == blank and section.settings.url != blank %}
            <a class="slide-image-link" href="{{ section.settings.url }}">
          {% endif %}

          {% if has_content or section.settings.image_mobile %}
            <div class="fc-slide-text fc slide-text {{ section.settings.text_style }}">
              
              {% if has_content %}
                <div class="fc-slide-text-inner">
                {% if section.settings.title != blank %}
                  <h3 class="module-title">{{ section.settings.title }}</h3>
                {% endif %}

                {% if section.settings.subtitle != blank %}
                  <h3>{{ section.settings.subtitle }}</h3>
                {% endif %}

                {% if section.settings.cta != blank and section.settings.url != blank %}
                  <a class="fc button fc-green-button" href="{{ section.settings.url }}">
                    <span>{{ section.settings.cta | escape }}</span>
                  </a>
                {% endif %}
                  
                <div class="fc-emph3 fc-product-feature-list">
                  <div class="fc-product-feature fc-pf-left">
                    <div>
                      <i class="product-specification-list-item-icon ion-checkmark" aria-hidden="true" title="Free Shipping"></i>
                    </div>
                    <div class="fc-product-features-line">
                      <span class="fc-product-features-text fc-product-features-strong fc-emph1">
                        free shipping</span>
                      <span class="fc-product-features-text">
                        in italy in 3 business days</span>
                    </div>
                  </div>
                  <div class="fc-product-feature fc-pf-center">
                    <div>
                      <i class="product-specification-list-item-icon ion-checkmark" aria-hidden="true" title="Free Shipping"></i>
                    </div>
                    <div class="fc-product-features-line">
                      <span class="fc-product-features-text">
                        2-years warranty</span>
                    </div>
                  </div>
                  <div class="fc-product-feature fc-pf-right" style="width: 100%;">
                    <div>
                      <i class="product-specification-list-item-icon ion-checkmark" aria-hidden="true" title="Free Shipping"></i>
                    </div>
                    <div class="fc-product-features-line">
                      <span class="fc-product-features-text">
                        14 days gurantee</span>
                    </div>
                  </div>
              	</div>
                  
                </div>
              {% endif %}
              
              {% if section.settings.image_mobile %}
              	<img class="fc-mob-image" src="{{ mobile_image }}">
              {% endif %}
              
            </div>
          {% endif %}
              
          {% if section.settings.cta == blank and section.settings.url != blank %}
            </a>
          {% endif %}
          
        </div>
    </div>
	
    <script>
      function {{ custom_class }}_dr(sel) {
        console.log("resize!");
      	var img = document.createElement('img');
      	img.src = '{{ slide_image }}';
      	$(sel).css('min-height', $(sel).width()*img.naturalHeight/img.naturalWidth );
      }
      $(window).on("load", function() {
        {{ custom_class }}_dr(".fc-bg-img-block-wrapper.{{ custom_class }}");
      });
      $(window).on("resize", function() {
        {{ custom_class }}_dr(".fc-bg-img-block-wrapper.{{ custom_class }}");
      });
    </script>
  </div>
{% endif %}

